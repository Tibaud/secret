<!DOCTYPE html>
<html>
  <head>
    <title>AuthenticationExample</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css' %>
  </head>
  <body>
    <div class='container'>
    <div class='nav.navbar.navbar-default'>

    <div class='navbar-brand'>Secret Project

    <% if flash[:success] %>
      <ul class='nav.navbar-nav.navbar-right'>
        <li><%= link_to "Delete", delete_path, method: :delete %></li>
        <li><%= link_to 'Logout', logout_path %></li>
      </ul>

    <% else %>
      <ul class='nav.navbar-nav.navbar-right'>
        <li><%= link_to 'Nouveau compte', new_user_path %></li>
        <li><%= link_to 'Sign in.', login_path %></li>
      </ul>
      <% end%>
      </div>
      </div>

    <%= yield %>
    </div>
  </body>
</html>
